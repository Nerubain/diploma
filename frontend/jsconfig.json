{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",

    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@functions/*": ["src/utils/functions/*"]
    }
  },
  "exclude": ["node_modules"]
}
